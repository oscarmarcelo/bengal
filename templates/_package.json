{
  "name": "<%= package %>",
  "version": "<%= version %>",
  "description": "<%= description %>",
  "type": "module",
  "exports": "./index.js",
  "engines": {
    "node": ">=<%= nodeVersion %>"
  },
  "scripts": {
    "start": "gulp",
    <%_ if (views) { -%>
    "build": "gulp build",
    "serve": "gulp serve",
    <%_ } -%>
    <%_ if (viewsLanguage === 'php') { -%>
    "container": "docker-compose up",
    <%_ } -%>
    "dist": "gulp dist",
    <%_ if (type === 'website') { -%>
    "deploy": "gulp deploy",
    <%_ } -%>
    <%_ if (xo) { -%>
    "lint": "xo",
    <%_ } -%>
    "clean": "gulp clean"
  },
  "keywords": <%- keywords %>,
  "author": {
    "name": "<%= author %>"<% if (email) { %>,
    "email": "<%= email %>"<% } %><% if (website) { %>,
    "url": "<%= website %>"<% } %>
  },
  "homepage": "<% if (homepage) { %><%= homepage %><% } else { %>https://github.com/<%= username %>/<%= package %>#readme<% } %>",
  "license": "<%# Managed by generator-license %>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/<%= username %>/<%= package %>.git"
  },
  "bugs": {
    "url": "https://github.com/<%= username %>/<%= package %>/issues"
  },
  <%_ if (type !== 'package') { -%>
  "private": true,
  <%_ } -%>
  "dependencies": {},
  "devDependencies": {},
  "browserslist": [
    <%_ if (type === 'electron') { -%>
      "Electron <%= electronVersion %>"
    <%_ } else { -%>
    "last 2 Chrome versions",
    "last 2 Firefox versions",
    "last 2 Safari versions",
    "last 2 Edge versions",
    "last 2 ChromeAndroid versions",
    "last 2 iOS versions"
    <%_ } -%>
  ]<% if (babel) { %>,
  "babel": {
    "presets": [
      "@babel/env"
    ],
    "only": [
      "./src/**"
    ]
  }<% } %><% if (xo) { %>,
  "xo": {
    "space": 2,
    "envs": [
      "node",
      "browser"
    ],
    "rules": {
      "no-multiple-empty-lines": [
        1,
        {
          "max": 3
        }
      ]
    },
    "ignores": [
      "build/**",
      "dist/**"
    ]
  }<% } %>,
  "bengal": {
    "version": "<%= bengalVersion %>"
  }
}
